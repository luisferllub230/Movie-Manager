<div class="container text-center">
  <h1>{{message}}</h1>
</div>

<div class="row mt-3">
  {{#each movies as |i key|}}
    <div class="col-12 mt-2 col-md-6 col-lg-4">

      <div class=" bg-white text-dark border border-dark shadow text-center">

        <div class="text-center m-1">
          <img src="{{i.urlImage}}" class="" alt="{{i.description}}" />
        </div>

        <div class="text-start m-3">

          <h5 class="">{{i.title}}</h5>

          {{#if check}}
            <div class="bg-success ">
              <p class="text-white text-center">Active</p>
            </div>

          {{else}}
            <div class="bg-danger ">
              <p class="text-white text-center">Inactive</p>
            </div>
          {{/if}}

          <div class="">
            <a href="/delete/{{i.id}}" class="btn btn-danger">Delete</a>
            <a href="/edit/{{i.id}}/true" class="btn btn-warning">edit</a>
          </div>

        </div>
      </div>

    </div>
  {{/each}}
</div>